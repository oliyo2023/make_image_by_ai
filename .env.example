# AI图像生成器环境变量配置示例
# 复制此文件为 .env 并修改相应配置

# 服务器配置
PORT=8000
IMAGES_DIR=public/static/images
MAX_RETRIES=3
TIMEOUT=30

# API 密钥 (必需配置)
# ModelScope Token - 从 https://www.modelscope.cn/ 获取
MODEL_SCOPE_TOKEN=your-model-scope-token

# OpenRouter API Key - 从 https://openrouter.ai/ 获取  
OPENROUTER_API_KEY=your-openrouter-api-key

# 模型配置
MODEL_SCOPE_MODEL=deepseek-ai/DeepSeek-V3.1
DEFAULT_OPENROUTER_MODEL=google/gemini-2.5-flash-image-preview:free

# Cloudflare R2 存储配置 (可选)
CLOUDFLARE_R2_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_ACCESS_KEY_SECRET=
CLOUDFLARE_R2_ENDPOINT=
CLOUDFLARE_R2_BUCKET=

# Cloudflare D1 数据库配置
CLOUDFLARE_D1_ACCOUNT_ID=your-cloudflare-account-id
CLOUDFLARE_D1_API_TOKEN=your-cloudflare-api-token
CLOUDFLARE_D1_DATABASE_ID=your-d1-database-id
CLOUDFLARE_D1_DATABASE_NAME=ai_images

# 图片处理配置
IMAGE_MAX_WIDTH=1920
IMAGE_MAX_HEIGHT=1080
IMAGE_QUALITY=85
IMAGE_FORMAT=jpeg
IMAGE_ENABLE_RESIZE=true

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=text
LOG_FILE=